(defwidget bluetooth []
  (box
    :class "module"
    (eventbox
   		:class "evtButton"
     :onclick "blueberry"
    :onrightclick "scripts/bluetooth toggle"
      (label
        :text {bluetooth.icon}
          :class "module-bt module icon"
          :style "color: ${bluetooth.color};"
    :tooltip "${bluetooth.text} ${bluetooth.battery}"
      ))))
